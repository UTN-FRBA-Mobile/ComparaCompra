<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_outline_person_24" />

    <EditText
        android:id="@+id/userAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="User address"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/labelAddress"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.125" />

    <EditText
        android:id="@+id/maxDistanceField"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginEnd="84dp"
        android:ems="10"
        android:hint="Max dist."
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/labelAddress"
        app:layout_constraintStart_toEndOf="@+id/labelMaxDistance"
        app:layout_constraintTop_toBottomOf="@+id/userAddress"
        app:layout_constraintVertical_bias="0.48" />

    <TextView
        android:id="@+id/labelMaxDistance"
        android:layout_width="124dp"
        android:layout_height="25dp"
        android:text="Distancia máxima"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapsImageButton"
        app:layout_constraintVertical_bias="0.303" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Nombre usuario"
        android:textAlignment="center"
        android:textSize="20sp"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/userImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mapsImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#000000"
        android:contentDescription="Botón de mapa para configurar latitud y longitud del usuario."
        android:foregroundTint="#000000"
        android:src="@android:drawable/ic_dialog_map"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelAddress" />

    <TextView
        android:id="@+id/labelAddress"
        android:layout_width="63dp"
        android:layout_height="28dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="52dp"
        android:text="Dirección"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userImage" />

</androidx.constraintlayout.widget.ConstraintLayout>