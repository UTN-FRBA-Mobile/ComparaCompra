<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/imageCart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/imagen_del_producto"
        app:srcCompat="@drawable/ic_baseline_shopping_cart_24"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/text_cartName"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:textAlignment="gravity" />

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/alt_menu_carrito"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_three_dots_vertical" />

</LinearLayout>
